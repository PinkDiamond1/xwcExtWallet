{
    "name": "XwcExtWallet",
    "default_locale": "en",
    "description": "The extension wallet for XWC chain",

    "version": "0.0.4",
    "manifest_version": 2,
    
    "icons": {
        "19": "images/icon_19.png",
        "38": "images/icon_38.png",
        "128": "images/icon_128.png"
    },

    "permissions": ["activeTab", "declarativeContent", "storage", "tabs"],
    "background": {
      "scripts": ["xwcWebWallet/lib/xwcjs.min.js", "xwcWebWallet/lib/account_utils.min.js", "xwcWebWallet/lib/1-localSave.js", "background.js"],
      "persistent": false
    },

    "browser_action": {
        "default_title": "XWC wallet",
        "default_icon": {
            "19": "images/icon_19.png",
            "38": "images/icon_38.png"
        },

        "default_popup": "xwcWebWallet/ext_index.html#transfer"
    },

   "content_scripts": [ {
      "all_frames": true,
      "js": [ "contentscript.js" ],
      "matches": [ "file://*/*",  "http://*/*", "https://*/*" ],
      "run_at": "document_start"
   } ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://unpkg.com/ http://localhost:8080/; object-src 'self'",

  "web_accessible_resources": ["inpage.js"],

    "options_page": "options.html",
    "homepage_url": "http://wallet.xwc.cash/"
}